#blog.blog_area
  .container
    .row
      .col-md-12
        .section-title.t_center
          // title
          h2 Haberler
          // IMAGE
          .em-image
            img(data-lazysrc='/assets/images/icon.jpg' alt='title image')
          // TEXT
          p.text-alignm G&uuml;ncel haberleri ve detaylar&imath;n&imath; a&scedil;a&gbreve;&imath;da yer alan alandan g&ouml;rebilirsiniz.
    .row
      .blog_carousel.owl-carousel.curosel-style
        each announcement in announcements
          .col-md-12
            .astute-single-blog_adn
              // BLOG THUMB
              .blog_adn_thumb_inner
                .astute-blog-thumb_adn
                  a(href='/posts/' + announcement.post.id )
                    img(data-lazysrc=announcement.image.url alt=announcement.title, style="object-fit: cover; height: 300px")
                  .blog_add_icon
                    a(href='/posts/' + announcement.post.id )
                      i.fa.fa-link
                // BLOG TITLE
                .blog-page-title_adn2
                  h2
                    a(href='/posts/' + announcement.post.id ) #{announcement.title}
              .em-blog-content-area_adn
                .learn_more_adn
                  a.learn_btn.adnbtn2(href='/posts/' + announcement.post.id )
                    | Daha Fazla Bilgi
                    i.fa.fa-long-arrow-right
